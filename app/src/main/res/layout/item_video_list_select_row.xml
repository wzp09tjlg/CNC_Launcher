<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_120dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/video_list_select_img_left_triangle"
        android:layout_width="@dimen/dimen_14dp"
        android:layout_height="@dimen/dimen_27dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:src="@drawable/icon_left_triangle" />

    <cn.cncgroup.tv.ui.widget.gridview.HorizontalGridView
        android:id="@+id/video_list_select_grid_row"
        android:layout_width="@dimen/dimen_1240dp"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:gravity="center"
        app:horizontalMargin="@dimen/dimen_036dp" />

    <ImageView
        android:id="@+id/video_list_select_img_right_triangle"
        android:layout_width="@dimen/dimen_14dp"
        android:layout_height="@dimen/dimen_27dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:src="@drawable/icon_right_triangle" />
</LinearLayout>
