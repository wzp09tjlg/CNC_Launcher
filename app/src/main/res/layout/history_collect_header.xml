<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_120dp"
        android:layout_marginTop="@dimen/dimen_70dp"
        android:text="历史"
        android:textSize="@dimen/dimen_60sp" />

    <ImageView
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_alignBottom="@+id/ll_to_sreach"
        android:layout_marginStart="@dimen/dimen_90dp"
        android:background="@drawable/history_title_image" />

    <LinearLayout
        android:id="@+id/ll_to_sreach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_80dp"
        android:background="@drawable/film_search_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/history_search"
            android:layout_width="@dimen/dimen_500dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_40dp"
            android:singleLine="true"
            android:text="输入您想要的影片资源"
            android:textColor="@color/white_50"
            android:textSize="@dimen/dimen_36sp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:background="@drawable/search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_90dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dimen_80dp">

        <TextView
            android:textColor="@color/white_70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/film_info1"
            android:textSize="@dimen/dimen_36sp" />

        <ImageView
            android:id="@+id/iv_menu_hearer"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_3dp"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/film_menu" />

        <TextView
            android:textColor="@color/white_70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footmark_clean_delete"
            android:textSize="@dimen/dimen_36sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dimen_400dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_to_sreach"
        android:layout_alignStart="@+id/linearLayout"
        android:background="@drawable/icon_film_left_split" />

</RelativeLayout>