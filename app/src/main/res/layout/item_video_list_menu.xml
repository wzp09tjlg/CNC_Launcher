<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_video_list_menu_selector"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@drawable/item_video_list_focus_line_selector"
        android:duplicateParentState="true" />

    <TextView
        android:id="@+id/video_list_text_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_94dp"
        android:duplicateParentState="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/item_video_list_menu_text_selector"
        android:textSize="@dimen/dimen_40sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@drawable/item_video_list_focus_line_selector"
        android:duplicateParentState="true" />
</LinearLayout>
