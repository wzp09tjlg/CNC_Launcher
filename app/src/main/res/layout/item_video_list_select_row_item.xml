<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_210dp"
    android:layout_height="match_parent"
    android:background="@drawable/filter_select_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="@dimen/dimen_18dp"
    android:paddingRight="@dimen/dimen_18dp">

    <cn.cncgroup.tv.ui.widget.MarqueeTextView
        android:id="@+id/video_list_select_text_row_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:duplicateParentState="true"
        android:ems="5"
        android:gravity="center"
        android:textColor="@color/item_video_list_select_selector"
        android:textSize="@dimen/dimen_32sp" />
</RelativeLayout>
