<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_180dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/tv_boot_custom_back"
            android:layout_width="@dimen/dimen_28dp"
            android:layout_height="@dimen/dimen_46dp"
            android:layout_marginStart="@dimen/dimen_82dp"
            android:background="@drawable/icon_back"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_boot_custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_24dp"
            android:text="软件升级"
            android:textColor="#f0f0f0"
            android:textSize="@dimen/dimen_54sp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginLeft="@dimen/dimen_96dp"
        android:layout_marginRight="@dimen/dimen_96dp"
        android:layout_marginTop="@dimen/dimen_140dp"
        android:background="@drawable/line" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/version_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新版本V1.0.1"
            android:textSize="@dimen/dimen_44sp" />

        <TextView
            android:id="@+id/version_data_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="20150115"
            android:paddingLeft="@dimen/dimen_20dp"
            android:textSize="@dimen/dimen_36sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lmmediate_update_textview"
        android:layout_width="@dimen/dimen_240dp"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_228dp"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:nextFocusDown="@+id/lmmediate_update_textview"
        android:nextFocusUp="@+id/lmmediate_update_textview"
        android:gravity="center"
        android:text="立即更新"
        android:textSize="@dimen/dimen_42sp" />

    <cn.cncgroup.tv.ui.widget.ShadowView
        android:id="@+id/shadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_title_focus"
        android:visibility="invisible" />

    <ScrollView
        android:id="@+id/desc_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_290dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_557dp"
        android:layout_marginRight="@dimen/dimen_557dp"
        android:layout_marginBottom="@dimen/dimen_250dp"
        android:layout_marginTop="@dimen/dimen_100dp"
        android:scrollbars="none">

        <TextView
            android:id="@+id/update_content_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:textColor="@color/white_70"
            android:lineSpacingExtra="@dimen/dimen_36dp"
            android:textSize="@dimen/dimen_30sp" />
    </ScrollView>

</RelativeLayout>