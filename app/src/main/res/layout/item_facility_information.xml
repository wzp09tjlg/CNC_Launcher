<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_700dp"
    android:layout_height="@dimen/dimen_68dp"
    android:background="@drawable/setting_background"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dimen_12dp"
   >

    <TextView
        android:id="@+id/model_textview"
        android:layout_width="@dimen/dimen_278dp"
        android:layout_height="@dimen/dimen_68dp"
        android:text="New Text"
        android:gravity="center|right"
        android:textSize="@dimen/dimen_32sp"
        android:paddingRight="@dimen/dimen_68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="@dimen/dimen_36dp"
        android:background="#ffffff"
        android:id="@+id/view2"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/model_textview" />

    <TextView
        android:layout_width="@dimen/dimen_421dp"
        android:layout_height="@dimen/dimen_68dp"
        android:text="New Text"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dimen_68dp"
        android:textSize="@dimen/dimen_32sp"
        android:textColor="@color/white_70"
        android:id="@+id/model_number_textview"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/model_textview" />
</RelativeLayout>