<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.cncgroup.tv.cncplayer.PlayerFragment">

    <cn.cncgroup.tv.cncplayer.controller.ControllerManager
        android:id="@+id/baseController"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/tv_currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_62dp"
        android:layout_marginRight="@dimen/dimen_102dp"
        />


</RelativeLayout>
