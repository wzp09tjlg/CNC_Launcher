<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:layout_marginRight="@dimen/dimen_20dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:nextFocusUp="@+id/gallery">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_277dp"
        android:layout_centerInParent="true"
        android:duplicateParentState="true"
        android:gravity="center"
        fresco:placeholderImage="@drawable/default_video_postbg"
        fresco:placeholderImageScaleType="fitXY"
        fresco:roundedCornerRadius="10px" />

    <cn.cncgroup.tv.ui.widget.MarqueeTextView
        android:id="@+id/text"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignBottom="@+id/image"
        android:background="@drawable/home_text_bg_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_4dp"
        android:textColor="@color/item_video_list_text_selector"
        android:textSize="@dimen/dimen_28sp" />
</RelativeLayout>