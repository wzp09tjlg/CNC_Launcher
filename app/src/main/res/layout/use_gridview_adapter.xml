<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_308dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_24dp"
    android:layout_marginRight="@dimen/dimen_24dp"
    android:layout_marginTop="@dimen/dimen_70dp"
    android:background="@drawable/item_app_selector"
    android:focusable="true"
    android:gravity="center">

    <View
        android:layout_width="@dimen/dimen_308dp"
        android:layout_height="@dimen/dimen_302dp" />

    <ImageView
        android:id="@+id/app_img_gv_use"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_79dp"
        android:background="@drawable/item_app_add_icon_selector"
        android:duplicateParentState="true" />

    <TextView
        android:id="@+id/text_gv_use"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_img_gv_use"
        android:layout_marginTop="@dimen/dimen_26dp"
        android:duplicateParentState="true"
        android:gravity="center"
        android:text="@string/click_add"
        android:textColor="@color/item_app_add_text_selector"
        android:textSize="@dimen/dimen_36sp" />

    <ImageView
        android:id="@+id/app_icon_gv_use"
        android:layout_width="@dimen/dimen_160dp"
        android:layout_height="@dimen/dimen_160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/app_text_AppName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_icon_gv_use"
        android:layout_marginTop="@dimen/dimen_26dp"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/dimen_36sp"
        android:visibility="gone" />

    <View
        android:id="@+id/app_view_bg"
        android:layout_width="@dimen/dimen_308dp"
        android:layout_height="@dimen/dimen_302dp"
        android:layout_centerInParent="true"
        android:background="@drawable/item_app_view_shape"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/app_img_menu"
        android:layout_width="@dimen/dimen_308dp"
        android:layout_height="@dimen/dimen_302dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>