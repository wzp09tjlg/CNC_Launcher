<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_82dp"
        android:layout_marginTop="@dimen/dimen_54dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/titie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/search_title_icon"
                android:layout_width="@dimen/dimen_26dp"
                android:layout_height="@dimen/dimen_46dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:src="@drawable/icon_arrow" />
            <TextView
                android:id="@+id/search_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24dp"
                android:text="全部应用"
                android:textSize="@dimen/dimen_54sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_96dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:background="@drawable/line" />
    </LinearLayout>
    <cn.cncgroup.tv.ui.widget.gridview.VerticalGridView
        android:id="@+id/gridview_all_app"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_870dp"
        android:fadeScrollbars="false"
        android:scrollbarSize="@dimen/dimen_12dp"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical"
        android:scrollbarTrackVertical="@drawable/scrollbar_track_vertical"
        android:scrollbars="vertical"
        app:numberOfColumns="5"/>
    <cn.cncgroup.tv.ui.widget.ShadowView
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_title_focus"
        android:visibility="invisible" />
</RelativeLayout>
