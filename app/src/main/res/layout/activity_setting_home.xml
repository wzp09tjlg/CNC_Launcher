<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.cncgroup.tv.ui.widget.gridview.VerticalGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_345dp"
        android:layout_marginRight="@dimen/dimen_345dp"
        android:layout_marginTop="@dimen/dimen_190dp"
        app:horizontalMargin="@dimen/dimen_119dp"
        app:numberOfColumns="3"
        app:verticalMargin="@dimen/dimen_50dp" />

    <cn.cncgroup.tv.ui.widget.ShadowView
        android:id="@+id/shadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_title_focus"
        android:visibility="invisible" />

</RelativeLayout>