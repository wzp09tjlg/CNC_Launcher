<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_434dp"
    android:layout_height="@dimen/dimen_666dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen_13dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageSwitcher
        android:id="@+id/categroy_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_category_text"
        android:gravity="center"
        android:textSize="@dimen/dimen_36sp" />
</RelativeLayout>