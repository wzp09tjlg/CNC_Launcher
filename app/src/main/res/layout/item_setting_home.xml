<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_330dp"
    android:layout_height="@dimen/dimen_330dp"
    android:background="@drawable/bg_setting_item"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_46dp"
        android:textSize="@dimen/dimen_36sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dimen_121dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_44dp" />

    <View
        android:id="@id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/desc"
        android:background="@drawable/line" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="@dimen/dimen_30sp" />
</RelativeLayout>