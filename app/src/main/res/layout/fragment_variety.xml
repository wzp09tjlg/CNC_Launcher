<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.cncgroup.tv.view.homesecond.widget.CoverFlowHorizontal
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_96dp"
        android:layout_marginRight="@dimen/dimen_96dp"
        android:layout_height="@dimen/dimen_525dp"
        android:layout_marginTop="@dimen/dimen_25dp"
        app:horizontalMargin="@dimen/dimen_0224dp" />

    <cn.cncgroup.tv.view.homesecond.widget.VarietyRecyclerView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_308dp"
        android:layout_marginTop="@dimen/dimen_510dp" />

    <cn.cncgroup.tv.ui.widget.ShadowView
        android:id="@+id/shadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_title_focus"
        android:visibility="invisible" />

    <View
        android:id="@+id/coverflow_focuseview"
        android:layout_width="@dimen/dimen_752dp"
        android:layout_height="@dimen/dimen_415dp"
        android:layout_alignTop="@+id/gallery"
        android:layout_centerHorizontal="true" />
</RelativeLayout>