<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_280dp"
    android:layout_height="@dimen/dimen_280dp"
    android:background="@drawable/bg_setting_item"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:duplicateParentState="true"
    >

    <ImageView
        android:id="@+id/feedback_item_image"
        android:layout_width="@dimen/dimen_117dp"
        android:layout_height="@dimen/dimen_117dp"
        android:src="@drawable/fk_movie_less"
        android:layout_marginTop="@dimen/dimen_53dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/feedback_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_32sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/feedback_item_image"
        android:layout_marginTop="@dimen/dimen_40dp"
        />

</RelativeLayout>