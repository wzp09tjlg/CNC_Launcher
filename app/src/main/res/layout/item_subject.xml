<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="@dimen/dimen_260dp"
        android:layout_height="@dimen/dimen_360dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/default_video_postbg"
        fresco:placeholderImageScaleType="fitXY"
        fresco:roundedCornerRadius="10px" />

    <cn.cncgroup.tv.ui.widget.MarqueeTextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_alignBottom="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_alignRight="@+id/image"
        android:background="@drawable/home_text_bg_selector"
        android:duplicateParentState="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_4dp"
        android:textColor="@color/item_video_list_text_selector"
        android:textSize="@dimen/dimen_30sp" />

    <cn.cncgroup.tv.ui.widget.MarqueeTextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_below="@+id/image"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:duplicateParentState="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_4dp"
        android:textSize="@dimen/dimen_30sp" />

</RelativeLayout>
