<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shutdown_text_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_466dp"
        android:layout_marginTop="@dimen/dimen_300dp"
        android:text="@string/unAutoShutdown"
        android:textColor="#f0f0f0"
        android:textSize="@dimen/dimen_36sp" />

    <ImageView
        android:id="@+id/shutdown_img_time_split"
        android:layout_width="@dimen/dimen_12dp"
        android:layout_height="@dimen/dimen_39dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_726dp"
        android:layout_marginTop="@dimen/dimen_305dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_ddot1" />

    <ImageView
        android:id="@+id/shutdown_img_hour_up"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_38dp"
        android:layout_marginRight="@dimen/dimen_125dp"
        android:layout_marginTop="@dimen/dimen_170dp"
        android:layout_toLeftOf="@+id/shutdown_img_time_split"
        android:scaleType="centerCrop"
        android:src="@drawable/item_icon_up_selector"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/shutdown_text_hour"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_marginRight="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_258dp"
        android:layout_toLeftOf="@+id/shutdown_img_time_split"
        android:background="@drawable/item_shutdown_time_shape"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="23"
        android:textSize="@dimen/dimen_60sp" />

    <ImageView
        android:id="@+id/shutdown_img_hour_down"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_38dp"
        android:layout_marginRight="@dimen/dimen_125dp"
        android:layout_marginTop="@dimen/dimen_428dp"
        android:layout_toLeftOf="@+id/shutdown_img_time_split"
        android:scaleType="centerCrop"
        android:src="@drawable/item_icon_down_selector"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/shutdown_img_minute_up"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_38dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_530dp"
        android:layout_marginTop="@dimen/dimen_170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_icon_up_selector"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/shutdown_text_minute"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_466dp"
        android:layout_marginTop="@dimen/dimen_258dp"
        android:background="@drawable/item_shutdown_time_shape"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="00"
        android:textSize="@dimen/dimen_60sp" />

    <ImageView
        android:id="@+id/shutdown_img_minute_down"
        android:layout_width="@dimen/dimen_70dp"
        android:layout_height="@dimen/dimen_38dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_530dp"
        android:layout_marginTop="@dimen/dimen_428dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_icon_down_selector"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/shutdown_text_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_570dp"
        android:gravity="center"
        android:text="@string/shutdownTip"
        android:textColor="#f0f0f0"
        android:textSize="@dimen/dimen_36sp"
        android:visibility="invisible" />

    <cn.cncgroup.tv.ui.widget.ShadowView
        android:id="@+id/shutdown_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_title_focus"
        android:visibility="invisible" />
</RelativeLayout>
