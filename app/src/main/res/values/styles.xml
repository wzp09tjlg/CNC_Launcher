<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dimen_54sp</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框 -->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!--无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊 -->
    </style>

    <style name="TextShadow">
        <item name="android:shadowColor">#7f000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="recommend_rl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <!--<item name="android:padding">@dimen/dimen_7dp</item>-->
    </style>

    <style name="recommend_tv" parent="TextShadow">
        <item name="android:textSize">@dimen/dimen_36sp</item>
        <item name="android:textColor">@color/recommend_textColor</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="about_boxinfo_describe" parent="TextShadow">
        <!-- <item name="android:width">0dp</item>
         <item name="android:layout_height">match_parent</item>-->

        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/dimen_42sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/dimen_60dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="about_boxinfo_value" parent="TextShadow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/dimen_42sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/dimen_60dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="about_layout">
        <item name="android:layout_width">@dimen/dimen_750dp</item>
        <item name="android:layout_height">@dimen/dimen_70dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/dimen_225dp</item>
        <item name="android:background">@drawable/about_list_bg</item>
        <item name="android:layout_marginTop">@dimen/dimen_15dp</item>
    </style>

    <!--问题反馈-->
    <style name="feedback_btn">
        <item name="android:layout_width">@dimen/dimen_600dp</item>
        <item name="android:layout_height">@dimen/dimen_81dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/feedback_btn_bg</item>
        <item name="android:layout_marginTop">@dimen/dimen_15dp</item>
        <item name="android:textSize">@dimen/dimen_42sp</item>
    </style>

    <style name="feedback_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_tab_pressed</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <style name="feed_rl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:padding">@dimen/dimen_12dp</item>
        <item name="android:background">@drawable/feedback_item_background</item>
    </style>

    <style name="feed_dv">
        <item name="android:layout_weight">@dimen/dimen_320dp</item>
        <item name="android:layout_height">@dimen/dimen_339dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingTop">@dimen/dimen_54dp</item>
        <item name="android:paddingRight">@dimen/dimen_90dp</item>
    </style>

    <style name="feed_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_240dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_75dp</item>
        <item name="android:textColor">@color/recommend_textColor</item>
        <item name="android:textSize">@dimen/dimen_42sp</item>
    </style>

    <style name="ConfirmDialog" parent="android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textSize">@dimen/dimen_36dp</item>
    </style>

    <!--筛选的背景样式-->
    <style name="Video_List_Select_Dialog" parent="android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@drawable/bg_select_dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--影视详情页文字样式-->
    <style name="teleplay_detales_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/recommend_textColor</item>
    </style>

    <style name="teleplay_detales_image_rl">
        <item name="android:layout_width">@dimen/dimen_230dp</item>
        <item name="android:layout_height">@dimen/dimen_70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
        <item name="android:paddingEnd">@dimen/dimen_10dp</item>
        <item name="android:background">@drawable/details_btn_bg</item>

    </style>

    <style name="teleplay_detales_rl_imageview">
        <item name="android:layout_width">@dimen/dimen_38dp</item>
        <item name="android:layout_height">@dimen/dimen_38dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">@dimen/dimen_6dp</item>
    </style>

    <style name="teleplay_detales_rl_textiew">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_20dp</item>
        <item name="android:textSize">@dimen/dimen_35sp</item>
    </style>

    <style name="ProgressBarStytle3">
        <item name="android:maxWidth">@dimen/dimen_150dp</item>
        <item name="android:maxHeight">@dimen/dimen_150dp</item>
        <item name="android:indeterminateDrawable">@drawable/rotatedrawable</item>
        <item name="android:minWidth">@dimen/dimen_150dp</item>
        <item name="android:minHeight">@dimen/dimen_150dp</item>
    </style>

    <!-- wifi正在连接的时候 -->
    <style name="ProgressBarStytle_wifi">
        <item name="android:maxWidth">@dimen/dimen_50dp</item>
        <item name="android:maxHeight">@dimen/dimen_50dp</item>
        <item name="android:indeterminateDrawable">@drawable/wifi_progress_img</item>
        <item name="android:minWidth">@dimen/dimen_50dp</item>
        <item name="android:minHeight">@dimen/dimen_50dp</item>
    </style>

    <!--&lt;!&ndash;设置自动开机页的activity用Dialog形式显示&ndash;&gt;-->
    <style name="DialogTransparent" parent="android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/transparent</item>
        <item name="android:backgroundDimAmount">0.9</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>


    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/dimen_24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.XMedium" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>
    <!--网络设置-->
    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--   <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>-->
    </style>
    <!-- 视频播放进度条 -->
    <style name="VideoSeekBarMyStyle" parent="android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/my_seekbar</item>
        <item name="android:thumbOffset">@dimen/dimen_43dp</item>
        <item name="android:maxHeight">@dimen/dimen_16dp</item>
        <item name="android:minHeight">@dimen/dimen_16dp</item>
        <item name="android:thumb">@drawable/player_seekbar_thumb</item>
    </style>

    <style name="Video_Definition_FrameLayout">
        <item name="android:focusable">true</item>
        <item name="android:layout_marginLeft">@dimen/dimen_30dp</item>
    </style>

    <style name="Video_Definition_TextView">
        <item name="android:textSize">@dimen/dimen_42sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/video_definition_text</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="CustomTabDialog" parent="android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">@drawable/bg_custom_tab_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
</resources>
